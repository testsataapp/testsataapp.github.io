xt="MTR" resource-id="com.gelakinetic.mtgfam:id/psts_tab_title" class="android.widget.TextView" content-desc="" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="true" enabled="true" focusable="true" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="1" text="IPG" resource-id="com.gelakinetic.mtgfam:id/psts_tab_title" class="android.widget.TextView" content-desc="" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="true" enabled="true" focusable="true" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="2" text="JAR" resource-id="com.gelakinetic.mtgfam:id/psts_tab_title" class="android.widget.TextView" content-desc="" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="true" enabled="true" focusable="true" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="3" text="Counter" resource-id="com.gelakinetic.mtgfam:id/psts_tab_title" class="android.widget.TextView" content-desc="" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="true" enabled="true" focusable="true" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/></node><node index="3" text="" resource-id="com.gelakinetic.mtgfam:id/viewpager" class="android.support.v4.view.ViewPager" content-desc="" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="true" focused="false" scrollable="true" long-clickable="false" password="false" scroll-type="all"><node index="4" text="" resource-id="" class="android.webkit.WebView" content-desc="" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"><node index="0" text="" resource-id="" class="android.webkit.WebView" content-desc="Unknown" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="true" focused="true" scrollable="true" long-clickable="false" password="false" scroll-type="all"><node index="0" text="" resource-id="" class="android.view.View" content-desc="Judging at Regular Rules Enforcement Level (REL)" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="1" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="2" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="3" text="" resource-id="" class="android.view.View" content-desc="Updated September 26, 2014" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="4" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="5" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="6" text="" resource-id="" class="android.view.View" content-desc="Most Magic- players play for fun and see a tournament as a social event. Regular REL (Rules Enforcement Level) encourages a welcoming atmosphere and friendly competition. Our demeanor should reflect this, whether we are playing, judging or both. Players and judges are encouraged to help one another at appropriate times, such as during deck construction or between matches. Judges are the last word when a dispute or question arises, and we should be as impartial and diplomatic as possible." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="7" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="8" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="9" text="" resource-id="" class="android.view.View" content-desc="Magic is a complicated game. While we can't prevent players from making mistakes, we should do our best to fix situations as fairly as possible. It is important that players know that when help is needed or something goes wrong, calling a judge is the best course of action. Our solutions should focus on educating the players and keeping the game going rather than worrying about the impact on the game. You should intervene if you see something illegal happen in a match, but beyond this you can exercise your discretion. For example, whether you step in when you see a player miss a trigger should be determined by the tone you want to strike for your event it may be appropriate to provide this extra help in a more causal environment, but less so if your play group is more competitive." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="10" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="11" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="12" text="" resource-id="" class="android.view.View" content-desc="When answering a question, feel free to double check the rules if you aren't sure of your answer. Remember to give the players extra time to finish their match to compensate for the time taken by the ruling. The fixes found in other documents, such as the Infraction Procedure Guide, are designed for a stricter environment and don't apply at Regular REL. If a player accidentally breaks a rule, use the remedies described below and your common sense as guidance to make the best ruling you can. Intentionally breaking a rule is cheating and is a Serious Problem (see below). If you feel that the suggested remedy is not well adapted to your particular situation and you can suggest a more appropriate fix which is accepted by both players, apply that fix instead. Player education is a priority; remind the players to play more carefully, but avoid being heavy- handed in order to keep your events fun and relaxed. If a player continues to repeat a mistake despite multiple reminders, you may warn them that the next occurrence will result in a Game Loss. Hopefully this final step will not be required, but knowing it is possible should get the player to correct their behavior." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="13" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="14" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="15" text="" resource-id="" class="android.view.View" content-desc="If your event requires deck lists, provides large prizes, or is otherwise of a more competitive nature, it may be better to run it at Competitive rather than Regular REL. This will require use of the full Infraction Procedure Guide instead of this document, so make sure you're familiar with it before trying a higher REL." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="16" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="17" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="18" text="" resource-id="" class="android.view.View" content-desc="Common Issues" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="19" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="20" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="21" text="" resource-id="" class="android.view.View" content-desc="A player forgets a triggered ability (one that uses the words when, whenever, or at the beginning, usually at the start of the ability's text)" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="22" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="23" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="24" text="" resource-id="" class="android.view.View" content-desc="These abilities are considered missed if the player did not acknowledge the ability in any way at the point that it required choices or had a visible in-game effect. If the ability includes the word may, assume the player chose not to perform it. Otherwise, use your judgement to decide if putting the trigger on the stack now would be too disruptive - don't add it to the stack if significant decisions have been made based on the effect not happening! Unlike other illegal actions (which must be pointed out), players may choose whether or not to point out their opponent's missed triggers, though we should encourage them to do so." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="25" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="26" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="27" text="" resource-id="" class="android.view.View" content-desc="A player sees a card in a library that he or she shouldn't have seen Shuffle the card seen into the unknown portion of the library. If any player legally knows the position of any cards in the library, ensure that your fix preserves the positions of those cards." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="28" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="29" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="30" text="" resource-id="" class="android.view.View" content-desc="A player accidentally draws has more cards than he or she was supposed to If the identity of the card(s) were known to all players, return them to their proper location. Otherwise, determine how many extra cards have been drawn, take that many cards at random from the player's hand and place them on top of the library. Don't shuffle the library after doing this! If the extra cards were drawn while drawing an opening hand, shuffle the extra cards back into the deck instead and allow the player to continue making mulligan decisions with the remaining cards." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="31" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="32" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="33" text="" resource-id="" class="android.view.View" content-desc="A player makes an in-game error not mentioned above This will cover the bulk of player errors, and usually the least disruptive option is to leave the game as it is after fixing anything that is currently illegal (e.g. an Aura enchanting an illegal permanent). If the error involved a player forgetting to draw or discard cards, have them perform the appropriate action now." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="34" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="35" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="36" text="" resource-id="" class="android.view.View" content-desc="Otherwise, if the error was caught quickly and rewinding is relatively easy, you may undo all the actions back to the point that the illegal action happened. This can include returning random cards from the hand to the library to undo card draws (though don't shuffle the library if you do this), untapping permanents and undoing combat. This can be very disruptive where lots of decisions have been made or hidden information has been revealed since the illegal action, so don't go crazy with this!" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="37" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="38" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="39" text="" resource-id="" class="android.view.View" content-desc="A player has illegal, insufficient, or another player's cards in his or her deck Remove any cards that shouldn't be in the deck, put back any cards that should, then add basic lands of the player's choice if the deck is below the format's minimum size limit. Any cards that are added to the deck should be shuffled directly into the library. If the error was discovered during a draw effect, have the player complete the draw effect after the deck is fixed and shuffled. Encourage players to count their deck and present their sideboard (face down) to their opponents before starting a game to avoid these errors." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="40" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="41" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="42" text="" resource-id="" class="android.view.View" content-desc="General Unwanted Behaviors" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="43" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="44" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="45" text="" resource-id="" class="android.view.View" content-desc="Players taking unreasonable amounts of time sideboarding or making play decisions." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="46" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="47" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="48" text="" resource-id="" class="android.view.View" content-desc="Inadequate shuffling." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="49" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="50" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="51" text="" resource-id="" class="android.view.View" content-desc="Asking for or providing strategic advice during a match or draft." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="52" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="53" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="54" text="" resource-id="" class="android.view.View" content-desc="Tardiness." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="55" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="56" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="57" text="" resource-id="" class="android.view.View" content-desc="As a judge, the priority is to educate players who exhibit these behaviors. It can be useful to reinforce this education with more stern penalties such as a Game Loss should the unwanted behaviour continue. A player that is more than 10 minutes late to a match is considered to have forfeited the match and should be dropped at the end of round if he or she is still absent." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="58" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="59" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="60" text="" resource-id="" class="android.view.View" content-desc="Regular REL is many players' first experience of tournament Magic, so ensuring a welcoming and inclusive atmosphere is important. A player whose behaviour may be upsetting others or making them uncomfortable should be educated and asked to stop immediately. If they make no attempt to correct their behaviour, applying a Game Loss may reinforce the seriousness of the issue. If this does not stop the behaviour, or if a player is being threatening, aggressive or harassing other players, these situations are Serious Problems." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="61" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="62" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="63" text="" resource-id="" class="android.view.View" content-desc="Serious Problems" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="64" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="65" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="66" text="" resource-id="" class="android.view.View" content-desc="Certain actions will not be tolerated under any circumstances. Every effort should be made to educate players before and during events; however, ignorance is not an acceptable defence of these actions. Any player engaging in the following must be removed from your event and, at the Organizer's discretion, removed from the venue entirely:" package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="67" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="68" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="69" text="" resource-id="" class="android.view.View" content-desc="Aggressive, violent, harassing or abusive behavior (physical or verbal)." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="70" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="71" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="72" text="" resource-id="" class="android.view.View" content-desc="Intentionally and knowingly breaking or letting an opponent break game or tournament rules, or lying, in order to gain an advantage. Bluffing about cards opponents can't normally see is permitted." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="73" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="74" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="75" text="" resource-id="" class="android.view.View" content-desc="Determining match outcomes by incentives, coercion, or outside-the-game methods, or gambling on any part of a tournament." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="76" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="77" text="" resource-id="" class="android.view.View" content-desc=" " package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="false" password="false" scroll-type="false"/><node index="78" text="" resource-id="" class="android.view.View" content-desc="Theft (including things like replacing a card in a draft with one from a player's binder). Removing players in this way is called a Disqualification, and we must always try to educate our players on why these actions are unacceptable. Also let the player know that while your decision is final, the Judge Program would still like to hear his or her side of the story. You can contact your local Regional Coordinator, high level Judge, or WPN Representative to guide you through the process of a Disqualification." package="com.gelakinetic.mtgfam" checkable="false" checked="false" clickable="false" enabled="true" focusable="false" focused="false" scrollable="false" long-clickable="